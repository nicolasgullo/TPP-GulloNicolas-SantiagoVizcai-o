<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/estatico/estilos/style.css">
    <link rel="shortcut icon" type="image/x-icon" href="/estatico/img/LOGO.png">
    <title>Panel Admin - Bussy</title>
</head>
<body>
    <main class="admin-main">
        <section class="admin-section">
            <div class="admin-header">
                <h1>Panel de Admin <span id="fuente-especial">Bussy</span></h1>
                <p>Gestión de productos</p>
            </div>
            <div class="admin-box">
                <% if (!productos || productos.length === 0) { %>
                    <p>No hay productos cargados todavía.</p>
                <% } else { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Talle</th>
                                <th>Precio</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productos.forEach(p => { %>
                                <tr>
                                    <td><%= p.id %></td>
                                    <td><%= p.name %></td>
                                    <td><%= p.tipo %></td>
                                    <td><%= p.talle %></td>
                                    <td>$<%= p.precio %></td>
                                    <td><%= p.activo ? "Sí" : "No" %></td>
                                    <td class="admin-actions">
                                        <a href="/admin/productos/<%= p.id %>/editar" class="btn-admin btn-admin-small">Editar</a>
                                        <% if (p.activo) { %>
                                            <button class="btn-admin btn-admin-small btn-desactivar" data-id="<%= p.id %>">
                                                Desactivar
                                            </button>
                                        <% } else { %>
                                            <button class="btn-admin btn-admin-small btn-activar" data-id="<%= p.id %>">
                                                Activar
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
                <div class="admin-footer-actions">
                    <a href="/admin/logout" class="btn-admin btn-admin-secondary">Cerrar sesión</a>
                    <a href="/admin/productos/alta" class="btn-admin btn-admin-primary">Nuevo producto</a>
                </div>
            </div>
        </section>
    </main>
    <script src="/estatico/js/dashboard.js"></script>
</body>
</html>